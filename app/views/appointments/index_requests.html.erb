<div class="container-fluid mt-4 px-2">
  <h2>Solicitudes de turnos</h2>
  <hr>

  <% if flash[:alert].present? %>
    <div class="alert alert-danger">  
      <%= flash[:alert] %>
    </div>
  <% elsif flash[:notice].present? %>
    <div class="alert alert-success">  
      <%= flash[:notice] %>
    </div>
  <% end %>

  <table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Informe de turnos</th>
      <th scope="col">Hoy</th>
      <th scope="col">Mañana</th>
      <th scope="col">Pasado</th>
    </tr>
  </thead>
  <tbody>
    <tr class="table-light">
      <th scope="row">Solicitudes</th>
      <td><%= @ux1 %></td>
      <td><%= @ux2 %></td>
      <td><%= @ux3 %></td>
    </tr>
    <tr class="table-secondary">
      <th scope="row">Reprogramados</th>
      <td><%= @dx1 %></td>
      <td><%= @dx2 %></td>
      <td><%= @dx3 %></td>
    </tr>
    <tr class="table-light">
      <th scope="row">En espera</th>
      <td><%= @tx1 %></td>
      <td><%= @tx2 %></td>
      <td><%= @tx3 %></td>
    </tr>
  </tbody>
</table>



  <div class="my-3" id="appointments">
    <div class="row">
      <% if @appointments.present? %>
        <% @appointments.each do |appointment| %>
          <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
            <div class="card">
              <%= render appointment %>
              <div class = card-body>
                <button class="btn btn-secondary d-inline-flex justify-content-center align-items-center" type="button" data-bs-toggle="modal" data-bs-target="#show_request"><%= link_to "VER MAS  ", request_path(appointment), class:"text-white text-decoration-none pe-2"%><i class="bi bi-plus-circle align-items-center mx-1"></i></button>
              </div>
            </div>
          </div>    
        <% end %>
      <% else %>
        <div class="col-12">
          <p>No hay turnos pendientes en la aplicación.</p>
        <div>
      <% end %>
    </div>
  </div>

</div>
